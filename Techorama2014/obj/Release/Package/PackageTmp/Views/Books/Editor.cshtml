<form name="form" class="form-horizontal">
    <div class="alert alert-danger" ng-show="errors.length">
        <ul>
            <li ng-repeat="error in errors">{{error}}</li>
        </ul>
    </div>
    
    <app-text-input ng-model="book.id" name="id" ng-disabled="true" caption="Id"></app-text-input>
    <app-text-input ng-model="book.title" name="title" ng-required="true" caption="Title"></app-text-input>
    <app-text-input ng-model="book.author" name="author" ng-required="true" caption="Author"></app-text-input>
    <app-text-input ng-model="book.imageName" name="image" caption="Image"></app-text-input>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button class="btn btn-primary" ng-click="save()" ng-disabled="form.$invalid">Save</button>
            <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
        </div>
    </div>
</form>


