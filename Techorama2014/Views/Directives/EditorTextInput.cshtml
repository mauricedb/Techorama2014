<div class="form-group" ng-class="{'has-error': form.{{name}}.$invalid}">
    <label class="col-sm-2 control-label">{{caption}}</label>
    <div class="col-sm-8">
        <input type="text" name="{{name}}" class="form-control" ng-model="ngModel" ng-disabled="{{ngDisabled}}" />
        <div class="help-block" ng-show="form.{{name}}.$error.required">The {{caption}} field is required.</div>
    </div>
</div>

